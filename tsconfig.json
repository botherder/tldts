{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "types": ["node", "jest"],
    "target": "ES3",
    "lib": ["ES6"],
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "files": [
    "./lib/index.ts"
  ]
}
